<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDarker"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comwim07101993ictproj3_capturetheflag.github.caperevexillum.activities.GameActivity">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/RedTeam"
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:background="@color/colorPrimaryDark"
            android:scaleType="fitCenter"
            android:tint="@android:color/holo_green_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/GreenTeam"
            app:srcCompat="@drawable/ic_flag">

        </ImageButton>

        <ImageButton
            android:id="@+id/GreenTeam"
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimaryDark"
            android:scaleType="fitCenter"
            android:tint="@android:color/holo_red_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/RedTeam"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_flag">

        </ImageButton>

        <ImageView
            android:id="@+id/flagIcon"
            android:layout_width="186dp"
            android:layout_height="233dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:tint="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_flag"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/txtSelectTeam"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/RedTeam" />

        <TextView
            android:id="@+id/txtSelectTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="select your team"
            android:textColor="@color/colorAccentLight"
            android:textSize="44sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtLobbyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:text="Loby:"
            android:textColor="@color/colorAccentLight"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/RedTeam"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/txtLobby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:textColor="@color/colorAccentLight"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@+id/txtLobbyLabel"
            app:layout_constraintTop_toTopOf="@+id/txtLobbyLabel"
            tools:text="the loby" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
